@{
    ViewBag.Title = "Manage Account";
}

<div id="container">

    @Html.Partial("~/Views/Shared/Sidebars/_SidebarUserInfo.cshtml")

    <div class="content" role="main">

        <div class="row nomargin">
            <div class="well col-md-12">
                <div class="alert-title">Your public profile</div>
                
                @if (ViewBag.StatusMessage != String.Empty)
                {
                    <p class="alert alert-danger">@ViewBag.StatusMessage</p>
                }

                @if (User.Identity.IsAuthenticated)
                {
                    <section id="userPreferences">
                        @Html.Action("UserPreferencesAbout")
                    </section>
                }
                <div class="alert-title">User preferences</div>
                <h2>You can use this form to customize your Voat experience.</h2>

                @if (User.Identity.IsAuthenticated)
                {
                    <section id="userPreferences">
                        @Html.Action("UserPreferences")
                    </section>
                }

                <div class="alert-title">Change your password</div>
                <h2>You can use this form to change your password.</h2>
                <br />

                <p class="text-success">@ViewBag.StatusMessage</p>

                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_ChangeAccountSettings")
                }
                else
                {
                    @Html.Partial("_SetPasswordPartial")
                }

                <div class="alert-title">Delete your account</div>
                <h2>You can use this form to permanently delete your account.</h2>
                <br />

                @if (User.Identity.IsAuthenticated)
                {
                    @Html.Partial("_DeleteAccount")
                }

                <section id="externalLogins">
                    @Html.Action("RemoveAccountList")
                </section>

            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
</div>
