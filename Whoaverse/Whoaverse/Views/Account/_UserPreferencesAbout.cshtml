@model Voat.Models.ViewModels.UserAboutViewModel

@using (Html.BeginForm("UserPreferencesAbout", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        @Html.LabelFor(m => m.Shortbio, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Shortbio, new { @class = "form-control" })
        </div>
    </div>
   
    <div class="form-group">
        @Html.LabelFor(m => m.Avatarfile, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="Avatarfile" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-3">
            <input type="submit" value="Save" class="btn-whoaverse" />
        </div>
    </div>
}


